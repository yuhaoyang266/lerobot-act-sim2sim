<mujoco model="panda scene with target table">
    <compiler angle="radian" meshdir="../../panda_mujoco_gym_ref/panda_mujoco_gym/assets/meshes/" autolimits="true"/>
  
    <option integrator="Euler" noslip_iterations="3" timestep="0.002" cone="pyramidal">
      <flag multiccd="enable" warmstart="enable"/>
    </option>
    
    <include file="../../panda_mujoco_gym_ref/panda_mujoco_gym/assets/panda_mocap.xml"/>
  
    <statistic center="0.3 0 0.4" extent="1"/>
  
    <visual>
      <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
      <rgba haze="0.15 0.25 0.35 1"/>
      <global azimuth="120" elevation="-20"/>
    </visual>
  
    <asset>
      <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
      <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
      <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>
  
    <worldbody>
      <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
      <camera name="watching" pos="1.669 -1.154 1.019" xyaxes="0.644 0.765 0.000 -0.250 0.210 0.945"/>

      <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
  
      <body name="floor" pos="0. 0. 0.">
        <site name="target" pos="0.3 0.4 0.13" size=".02 .02 .02" rgba="0 0 0 0" type="sphere"/>
      </body>
  
      <body name="obj" pos="0.4 0.0 0.2" quat="1 0 0 0">
        <joint type="free" damping="0.01" name="obj_joint"/>
          <geom name="obj_geom" mass="0.1" type="box" size="0.02 0.02 0.02" rgba="0.5 0.7 0.5 1" friction="1" condim="6"/>
          <site name="obj_site" pos="0 0 0" size="0.01" type="sphere"/>
      </body>

      <!-- Target table placed at (x=0.3, y=0.4), tabletop height 0.10, size 0.15 x 0.15 x 0.02 -->
      <body name="target_table" pos="0.3 0.4 0">
        <!-- tabletop thickness 0.02 -> half-size 0.01, center at z=0.11 -->
        <geom name="target_table_top" type="box" size="0.075 0.075 0.01" pos="0 0 0.11" rgba="0.78 0.62 0.45 1" contype="1" conaffinity="1"/>

        <!-- legs (4), diameter 0.015 -> radius 0.0075, height 0.10 -> half-height 0.05, centers at z=0.05 -->
        <geom name="target_leg_lf" type="cylinder" size="0.0075 0.05" pos="-0.06 0.06 0.05" rgba="0.60 0.45 0.30 1"/>
        <geom name="target_leg_rf" type="cylinder" size="0.0075 0.05" pos="0.06 0.06 0.05"  rgba="0.60 0.45 0.30 1"/>
        <geom name="target_leg_lb" type="cylinder" size="0.0075 0.05" pos="-0.06 -0.06 0.05" rgba="0.60 0.45 0.30 1"/>
        <geom name="target_leg_rr" type="cylinder" size="0.0075 0.05" pos="0.06 -0.06 0.05" rgba="0.60 0.45 0.30 1"/>

        <!-- visualization site at tabletop center -->
        <site name="target_table_center" pos="0 0 0.13" size="0.02" rgba="1 0 0 0.4" type="sphere"/>
      </body>
  
    </worldbody>
    
  </mujoco>
